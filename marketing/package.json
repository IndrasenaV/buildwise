    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "@playwright/test": "^1.48.0",
    "vite": "^5.0.0"
  }
}

